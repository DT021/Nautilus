{
  "$schema": "https://raw.githubusercontent.com/DotNetAnalyzers/StyleCopAnalyzers/master/StyleCop.Analyzers/StyleCop.Analyzers/Settings/stylecop.schema.json",
  "settings": {
    "documentationRules": {
      "companyName": "Nautech Systems Pty Ltd",
      "copyrightText": "  Copyright (C) 2015-2020 {companyName}. All rights reserved.\n  The use of this source code is governed by the license as found in the LICENSE.txt file.\n  https://nautechsystems.io",
      "xmlHeader": true,
      "fileNamingConvention": "stylecop"
    },
    "layoutRules": {
      "newlineAtEndOfFile": "require"
    },
    "orderingRules": {
      "systemUsingDirectivesFirst": true,
      "usingDirectivesPlacement": "preserve",
      "blankLinesBetweenUsingGroups": "omit"
    }
  }
}
